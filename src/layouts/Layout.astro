---
const t = Astro.props.frontmatter?.title || Astro.props.title;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <main>
            <header>
                <div>┌─ {t}</div>
                <nav>
                    └─┬ <a href="/">home</a>
                    ─┬ <a href="/library">library</a>
                    ─┬ <a href="https://github.com/Miyli/Gargamel">source</a>
                </nav>
            </header>
            <hr />
            <slot />
        </main>
        <style is:global>
            :root {
                --bg-color: #ffffff;
                --text-color: #1a1a1a;
                --link-color: #0066cc;
                --link-hover: #003366;
                --max-width: 800px;
                --body-padding: 1rem;
            }

            @media (prefers-color-scheme: dark) {
                :root {
                    --bg-color: #000;
                    --text-color: #fff;
                    --link-color: #66b3ff;
                    --link-hover: #99ccff;
                }
            }

            body {
                background-color: var(--bg-color);
                color: var(--text-color);
                margin: 0;
                padding: var(--body-padding);
            }

            main {
                max-width: var(--max-width);
                margin: 0 auto;
            }

            a {
                color: var(--link-color);
                text-decoration: none;
            }

            a:hover {
                color: var(--link-hover);
                text-decoration: underline;
            }

            hr {
                border-color: var(--text-color);
                opacity: 0.2;
            }
        </style>
    </body>
</html>
